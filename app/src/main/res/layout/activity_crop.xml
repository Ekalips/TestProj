<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:crop="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="2dp"
    android:paddingLeft="2dp"
    tools:context="com.example.djqrj.allah.CropActivity">

    <com.example.djqrj.allah.Cropper.EditPhotoView
        android:id="@+id/editable_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        crop:crop_corner_color="#fff"
        crop:crop_line_color="#aa111111"
        crop:crop_line_width="1dp"
        crop:crop_corner_width="2dp"
        crop:crop_shadow_color="#80000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cropBtn"
        android:background="@color/colorAccent"
        android:text="Save"
        android:layout_alignBottom="@+id/editable_image"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
